          </Grid.Resources>
          
          <TextBlock Grid.Row="0" Grid.Column="0" Text="性格:" />
          <ComboBox Grid.Row="0" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding SelectedCharacter, Mode=OneWayToSource, Converter={StaticResource cbias}}">
